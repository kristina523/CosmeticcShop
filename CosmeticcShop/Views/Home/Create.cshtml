@model CosmeticcShop.Models.Product

@{
    ViewBag.Title = "Добавление продукта";
}
<form asp_action="Create" asp-asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-formaction="Names" class="control-label">Название</label>
        <input type="text" asp-for="Names" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-formaction="Descriptions" class="control-label">Описание</label>
        <input type="text" asp-for="Descriptions" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-formaction="Price" class="control-label">Цена</label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>